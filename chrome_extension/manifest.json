{
    "manifest_version": 3,
    "name": "Speed Watch",
    "version": "1.0",
    "description": "Dynamically update video viewing speed based on the content",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "http://127.0.0.1/"
    ],
    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": [
            "*://*.youtube.com/*"
          ],
          "run_at": "document_end"
        }
      ],
      
      "action": {
        "default_popup": "popup.html"
      }
      
  }